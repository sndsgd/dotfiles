# ~/.bash_prompt: set the prompt variables here


get_git_branch() {
   if [ $(git rev-parse --is-inside-work-tree &>/dev/null; echo "${?}") == '0' ]; then

      # Get the short symbolic ref.
      # If HEAD isn’t a symbolic ref, get the short SHA for the latest commit
      branchName="$(git symbolic-ref --quiet --short HEAD 2> /dev/null || \
         git rev-parse --short HEAD 2> /dev/null)"

      echo -e "${branchName} "
   fi
}


reset="\[\e[0m\]"
# black="\e[1;30m"
# blue="\e[1;34m"
#lightcyan="\[\e[36m\]"
cyan="\[\e[1;36m\]"
lightgreen="\[\e[32m\]"
# green="\[\e[1;32m\]"
# orange="\e[1;33m"
# purple="\e[1;35m"
# red="\e[1;31m"
# violet="\e[1;35m"
white="\[\e[1;37m\]"
# yellow="\e[1;33m"


if [[ "${USER}" == "root" ]]; then
   username="\[${red}\]\u${reset}"
else
   username="${white}\u${reset}"
fi

if [[ "${TERM}"] != "linux" ]]; then
   PS1="\[\033]0;\u@\h\007\]" # set terminal title
else
   PS1=""
fi

PS1+="${username} " # username
PS1+="${cyan}[\h]" # host
PS1+="${reset} \w\n" # working directory
PS1+="${lightgreen}\$(get_git_branch)" # git branch
PS1+="${reset}❯ " # prompt
export PS1

PS2="${reset}↳ "
export PS2

